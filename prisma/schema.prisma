// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  userId   String    @id
  name     String
  password String
  sessions Session[]

  activities UserActivities[]
  quests     UserQuests[]
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  user      User     @relation(references: [userId], fields: [userId], onDelete: Cascade)
}

model ActivityType {
  id           Int              @id @default(autoincrement())
  name         String           @unique
  experience   Int
  userActivity UserActivities[]
}

model UserActivities {
  id           Int          @id @default(autoincrement())
  userId       String
  actionTypeId Int
  doneAt       DateTime     @default(now())
  user         User         @relation(fields: [userId], references: [userId])
  actionType   ActivityType @relation(fields: [actionTypeId], references: [id])

  @@unique([userId, actionTypeId, doneAt])
}

model Title {
  id        Int         @id @default(autoincrement())
  titleName String      @unique
  questType QuestType[]
}

model QuestType {
  id          Int          @id @default(autoincrement())
  name        String
  description String
  userQuests  UserQuests[]
  titleId     Int?
  title       Title?       @relation(fields: [titleId], references: [id])
}

model UserQuests {
  id        Int       @id @default(autoincrement())
  userId    String
  questId   Int
  completed Boolean
  user      User      @relation(fields: [userId], references: [userId])
  questType QuestType @relation(fields: [questId], references: [id])
}
