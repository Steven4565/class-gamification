@tailwind base;
@tailwind components;
@tailwind utilities;
@tailwind variants;

html,
body {
	@apply h-full overflow-hidden;
}

@layer components {
	.form-grid {
		display: grid;
		grid-template-columns: auto minmax(0, 1fr);
		row-gap: 1rem;
		column-gap: 0.5rem;
		align-items: center;
	}
	.button-grid {
		grid-template-columns: repeat(auto-fit, minmax(16em, 1fr));
	}

	.button-user-grid {
		grid-template-columns: repeat(auto-fit, minmax(11em, 1fr));
	}
}
